{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "layout": {
            "contentSize": "1320px",
            "wideSize": "1320px"
        },
        "color": {
            "palette": [
                {
                    "slug": "herbanext-green",
                    "color": "#0A7742",
                    "name": "Green"
                },  
                {
                    "slug": "herbanext-gray",
                    "color": "#6c6c6c",
                    "name": "Gray"
                },
                {
                    "slug": "herbanext-light-gray",
                    "color": "#f5f5f5",
                    "name": "Light Gray"
                },
                {
                    "slug": "herbanext-light-green",
                    "color": "#55FF70"
                },
                {
                    "slug": "herbanext-black",
                    "color": "#1a1a1a",
                    "name": "Black"
                },
                {
                    "slug": "herbanext-white",
                    "color": "#ffffff",
                    "name": "White"
                }
            ]
        },
        "spacing": {
            "padding": true,
            "margin": true,
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
        "border": {
            "radius": true,
            "color": true,
            "style": true,
            "width": true
        },
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "Avenir",
					"slug": "avenir",
					"fontFace": [
						{
							"fontFamily": "Avenir",
							"fontWeight": "400",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/avenir_normal_400.otf"
							]
						}
					]
				},
				{
					"fontFamily": "Museo",
					"slug": "museo",
					"fontFace": [
						{
							"fontFamily": "Museo",
							"fontWeight": "300",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/museo_normal_300.otf"
							]
						},
						{
							"fontFamily": "Museo",
							"fontWeight": "600",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/museo_normal_600.otf"
							]
						}
					]
				}
			]
		},
        "custom":{
            "typography":{
                "fontSize":{
                    "heading-display-1": "clamp(1.575rem, 1.5254rem + 3.9vw, 4.5rem)",
                    "heading-fs-1":"clamp(1.375rem, 1.375rem + 1.5vw, 2.5rem)"
                }
            },
            "lineHeight":{
                "tiny": 1.5,
                "small":1.3,
                "medium":1.4,
                "normal": 1.6,
                "large":2
            }
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--avenir)",
            "lineHeight": "1.2",
            "fontSize": "1rem"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--museo)",
                    "fontWeight":"600",
                    "lineHeight": "1.2",
                    "fontSize":"var(--wp--custom--typography--font-size--heading-display-1)"

                }
            }
        }
    }


}